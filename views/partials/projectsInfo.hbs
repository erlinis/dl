<div class='projects'>
  {{#each projects as |project|}}
    <div class='projects__row'>

      <div>
        <a href='{{project.url}}' target='_blank'><span class='fc-primary fw-bold'>{{project.name}}
          </span></a>
        {{#ifNotEquals project.defaultBranch 'main'}}
          <span class='fs-xs fc-medium'>({{project.defaultBranch}})</span>
        {{/ifNotEquals}}
      </div>

      <div class='pr-bot-box'>
        {{#if project.dependabotPRs}}
          <a href='{{project.url}}/pulls' target='_blank'>
            <span class='pr-bot' title='Dependabot open pull requests'>
              <span class='pr-robot'>ðŸ¤–</span>
              <span class='pr-bubble fs-sm fw-bold'>{{project.dependabotPRs}}</span>
            </span>
          </a>
        {{/if}}
      </div>

      {{#if project.framework}}
        <span class='version-{{project.framework.status}}'>
          {{project.framework.version}}
        </span>
      {{else}}
        <span></span>
      {{/if}}

      <span class='version-{{project.platform.status}}'>{{project.platform.version}}</span>
    </div>
  {{/each}}
</div>
